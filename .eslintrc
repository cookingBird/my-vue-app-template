{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
  },
  "globals": {
    "defineOptions": "writable",
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
  },
  "overrides": [
    {
      "files": ["**/*.json"],
    },
    {
      "files": ["**/*.js"],
    },
    {
      "files": ["**/*.ts(x)"],
      "parser": "@typescript-eslint/parser",
      "extends": ["eslint-config-airbnb-typescript/base", "prettier"],
      "parserOptions": {
        "project": "./tsconfig.json",
      },
    },
    {
      "files": ["**/*.vue"],
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": "latest",
        "vueFeatures": {
          "filter": true,
          "interpolationAsNonHTML": false,
        },
      },
      "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended",
        "prettier",
      ],
    },
  ],
}
